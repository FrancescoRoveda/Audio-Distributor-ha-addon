#!/usr/bin/with-contenv bashio
# ==============================================================================
# Audio Distributor - AirPlay (shairport-sync) finish handler
# ==============================================================================

readonly LOG_PREFIX="[shairport-sync]"
readonly EXIT_CODE=${1}

if [[ "${EXIT_CODE}" -ne 0 ]] && [[ "${EXIT_CODE}" -ne 256 ]]; then
    bashio::log.warning "${LOG_PREFIX} Exited with code ${EXIT_CODE}"
fi

bashio::log.info "${LOG_PREFIX} Service stopped"
